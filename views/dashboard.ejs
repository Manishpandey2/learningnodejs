<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mero BLog - Dashboard</title>
    <link rel="stylesheet" href="/home.css">
    <style>
        /* Additional dashboard-specific styles */
        .dashboard-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 20px;
        }

        .dashboard-actions {
            display: flex;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .blog-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .blog-table th, .blog-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .blog-table th {
            background-color: #f8f9fa;
        }

        .action-buttons button {
            padding: 5px 10px;
            margin: 0 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .edit-btn {
            background-color: #4CAF50;
            color: white;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            width: 70%;
            max-width: 500px;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <div class="logo">Mero Blog Dashboard</div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="#" class="active">Dashboard</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
            <div class="hamburger">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="dashboard-container">
        <div class="dashboard-actions">
            <h2>Manage Blogs</h2>
            
        </div>

        <table class="blog-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach((blog) => { %>
                <tr>
                    <td><%= blog.title %></td>
                    <td><%= blog.category %></td>
                    <td><img src="<%= blog.image %>" alt="Thumbnail" style="width: 50px; height: auto;"></td>
                    <td class="action-buttons">
                        <a class="edit-btn" href="/edit/<%= blog.id %>">Edit</a>
                        <a class="delete-btn" href="/deleteBlog/<%= blog.id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Create/Edit Modal -->
    <div id="blogModal" class="modal">
        <div class="modal-content">
            <h3 id="modalTitle">Create New Blog</h3>
            <form id="blogForm">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" id="blogTitle" required>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select id="blogCategory">
                        <option value="Technology">Technology</option>
                        <option value="Travel">Travel</option>
                        <option value="Food">Food</option>
                        <option value="Lifestyle">Lifestyle</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="url" id="blogImage" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea id="blogDescription" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="subscribe-btn">Save</button>
                    <button type="button" class="delete-btn" onclick="closeModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    
</body>
</html>