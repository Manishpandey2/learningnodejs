<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mero BLog - Dashboard</title>
    <link rel="stylesheet" href="/home.css">
    <style>
        /* Additional dashboard-specific styles */
        .dashboard-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 20px;
        }

        .dashboard-actions {
            display: flex;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .blog-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .blog-table th, .blog-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .blog-table th {
            background-color: #f8f9fa;
        }

        .action-buttons button {
            padding: 5px 10px;
            margin: 0 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .edit-btn {
            background-color: #4CAF50;
            color: white;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            width: 70%;
            max-width: 500px;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('./navbar.ejs') %>

    <!-- Dashboard Content -->
    <div class="dashboard-container">
        <div class="dashboard-actions">
            <h2>Manage Blogs</h2>
            
        </div>

        <table class="blog-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach((blog) => { %>
                <tr>
                    <td><%= blog.title %></td>
                    <td><%= blog.category %></td>
                    <td><img src="<%= blog.image %>" alt="Thumbnail" style="width: 50px; height: auto;"></td>
                    <td class="action-buttons">
                        <a class="edit-btn" href="/edit/<%= blog.id %>">Edit</a>
                        <a class="delete-btn" href="/deleteBlog/<%= blog.id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <div class="dashboard-container">
        <div class="dashboard-actions">
            <h2>Manage Users</h2>
            
        </div>

        <table class="blog-table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.createdAt %></td>
                    <td class="action-buttons">
                        <a class="delete-btn" href="/deleteUser/<%= user.id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>



    
</body>
</html>